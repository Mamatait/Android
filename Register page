package com.example.admin.res;

import android.content.Intent;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;

public class Main2Activity extends AppCompatActivity {
    EditText ename, email, epass, ecity,emob;
    Button b;
    Dbhelper dbhelper;
    String emailPattern="[a-zA-Z0-9._-]+@[a-z]+\\.+[a-z]+";
    String emobPattern="[0-9]{10}";



    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main2);
        ename = (EditText) findViewById(R.id.ed);
        email = (EditText) findViewById(R.id.ed1);
        epass = (EditText) findViewById(R.id.ed2);
        ecity = (EditText) findViewById(R.id.ed4);
        emob = (EditText) findViewById(R.id.ed5);
        dbhelper = new Dbhelper(Main2Activity.this);
        b = (Button) findViewById(R.id.button3);


        b.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {

                String s1, s2, s3, s4, s5;
                s1 = ename.getText().toString();
                s2 = email.getText().toString();
                s3 = epass.getText().toString();
                s4 = ecity.getText().toString();
                s5 = emob.getText().toString();
                if (!email.getText().toString().matches(emailPattern))
                {
                    Toast.makeText(getApplicationContext(),"Enter valid Mail ID",Toast.LENGTH_SHORT).show();
                }
                else if (!emob.getText().toString().matches(emobPattern))
                {
                    Toast.makeText(getApplicationContext(),"Enter valid phone number",Toast.LENGTH_SHORT).show();
                }

                else if (s1.equals("") || s2.equals("") || s3.equals("") || s4.equals("")||s5.equals("")) {
                    Toast.makeText(Main2Activity.this, "Field vacant", Toast.LENGTH_SHORT).show();
                } else {
                    dbhelper.register1(s1, s2, s3, s4, s5);
                    Toast.makeText(Main2Activity.this, "registered successfully", Toast.LENGTH_SHORT).show();
                    Intent inti=new Intent(Main2Activity.this,MainActivity.class);
                    startActivity(inti);
                }
            }

        });
    }
}

